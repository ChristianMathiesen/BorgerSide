@model IEnumerable<BorgerSide.Models.BorgerTip>

@{
    ViewData["Title"] = "Index";
}

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
             <h2 class="text-primary">Dine tips til kommunen</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="BorgerTips" asp-action="Create" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> &nbsp; Opret nyt tip
            </a>
        </div>
    </div>
    <br /><br />


<table class="table table-bordered table-striped" style="width:100%">
    <thead>
        <tr>
            <th>
                Navn
            </th>
            <th>
                E-mail
            </th>
            <th>
                Beskrivelse
            </th>
            <th>

            </th>
        </tr>
    </thead>
    <tbody>
            @foreach (var obj in Model)
            {
                <tr>
                    <td width="20%">
                        @obj.Navn
                    </td>
                    <td width="30%">
                        @obj.Email
                    </td> 
                    <td width="50%">
                        @obj.Description
                    </td> 
                     <td>
                        <div class="w-75 btn-group" role="group">
                            <a asp-controller="BorgerTips" asp-action="Edit" asp-route-id="@obj.Id" class="btn btn-primary mx-2"> <i class="bi bi-pencil-square"></i>Redigér</a>
                                <a asp-controller="BorgerTips" asp-action="Delete" asp-route-id="@obj.Id" class="btn btn-danger mx-2"> <i class="bi bi-trash-fill"></i>Slet</a>
                        </div>
                    </td>
                </tr>
            }
    </tbody>
</table>
</div>