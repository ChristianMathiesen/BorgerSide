@model IEnumerable<BorgerSide.Models.OlietankFormular>

@{
    ViewData["Title"] = "Index";
}

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
             <h2 class="text-primary">Anmeldelse eller sløjfning af olietank under 6000 liter.</h2>
        </div>
        <div>
            <p>Her kan du se dine Olietanksformularer. &nbsp; Ønsker du at anmelde eller sløjfe en olietank, der rummer mere end 6.000 liter henvises til www.bygogmiljoe.dk.</p>
        </div>
        <div class="col-6 text-start">
            <a asp-controller="OlietankFormulars" asp-action="Create" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> &nbsp; Udfyld en ny formular
            </a>
        </div>
    </div>
    <br /><br />


<table class="table table-bordered table-striped" style="width:100%">
    <thead>
        <tr>
            <th>
                Navn
            </th>
            <th>
                E-mail
            </th>
            <th>
                Ejer af olietank
            </th>
            <th>
                Er der konstateret forurening?
            </th>
        </tr>
    </thead>
    <tbody>
            @foreach (var obj in Model)
            {
                <tr>
                    <td width="20%">
                        @obj.Navn
                    </td>
                    <td width="20%">
                        @obj.Email
                    </td> 
                    <td width="20%">
                        @obj.Ejer
                    </td> 
                    <td width="20%">
                        @obj.Forurening
                    </td> 
                     <td>
                        <div class="w-75 btn-group" role="group">
                            <a asp-controller="OlietankFormulars" asp-action="Edit" asp-route-id="@obj.Id" class="btn btn-primary mx-2"> <i class="bi bi-pencil-square"></i>Redigér</a>
                                    <a asp-controller="OlietankFormulars" asp-action="Delete" asp-route-id="@obj.Id" class="btn btn-danger mx-2"> <i class="bi bi-trash-fill"></i>Slet</a>
                        </div>
                    </td>
                </tr>
            }
    </tbody>
</table>
</div>